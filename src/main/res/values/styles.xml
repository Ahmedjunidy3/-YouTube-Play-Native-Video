<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPurple</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BigTextViewCardViewStyle">
        <item name="cardCornerRadius">30dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="contentPaddingLeft">15dp</item>
        <item name="contentPaddingRight">15dp</item>
        <item name="cardBackgroundColor">@color/colorDarkGray</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardViewStyle2">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="elevation">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>


    <style name="TextViewStyle">
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spin_arrow_down_style_pink</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SubscribeButtonStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">35dp</item>
    <item name="android:layout_marginStart">60dp</item>
    <item name="android:layout_marginEnd">60dp</item>
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:background">@drawable/btn_cornered</item>
    <item name="android:backgroundTint">@android:color/holo_red_dark</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:singleLine">true</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:background">@drawable/btn_cornered_gray_small_radius</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textSize">10sp</item>
    </style>


</resources>
